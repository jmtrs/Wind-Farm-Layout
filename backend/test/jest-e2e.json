{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/core/(.*)$": "<rootDir>/../src/core/$1",
    "^@/infra/(.*)$": "<rootDir>/../src/infra/$1"
  }
}
